# Program to demonstrate different types of function arguments in Python

def demo_args(name, age=18, *hobbies, **details):
    # name -> positional/keyword argument
    # age -> default argument
    # hobbies -> variable-length positional arguments
    # details -> variable-length keyword arguments

    print("Name:", name)
    print("Age:", age)
    print("Hobbies:", hobbies)
    print("Details:", details)


# ğŸ”¹ Positional arguments
demo_args("Varshitha", 21)

# ğŸ”¹ Keyword arguments
demo_args(name="Varshitha", age=22)

# ğŸ”¹ Default argument (age will take default = 18)
demo_args("Varshitha")

# ğŸ”¹ Variable-length positional arguments (*args)
demo_args("Varshitha", 21, "Reading", "Coding", "Drawing")

# ğŸ”¹ Variable-length keyword arguments (**kwargs)
demo_args("Varshitha", 21, "Traveling", city="Hyderabad", course="Data Analytics")
